<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UM_Consultation_App_MAUI.Views.StudentView" 
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="UM_Consultation_App_MAUI.Views.StudentView.ResponsePage"
             Title="">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#8c221e" />
    </Page.Behaviors>

    <Grid RowDefinitions="Auto,*">
        <!-- Header + controls -->
        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="15">
            <Label Text="Consultation Responses"
                   FontSize="24" FontAttributes="Bold"
                   TextColor="Black" HorizontalOptions="Center"/>

            <Picker Title="All"
                    ItemsSource="{Binding Options}"
                    SelectedItem="{Binding SelectedSemster, Mode=TwoWay}"
                    TitleColor="Black"
                    BackgroundColor="#EFEFEF"
                    FontAttributes="Bold"
                    FontSize="18"
                    WidthRequest="50"
                    HeightRequest="50"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
        
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Responses}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10" Padding="15"
                            BackgroundColor="#f4f4f4">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>

                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Offset="5,5"
                                    Radius="10"
                                    Opacity="0.3"/>
                        </Border.Shadow>

                        <StackLayout Spacing="5">
                            <Label Text="{Binding CourseCode}" FontAttributes="Bold" FontSize="18" TextColor="#333"/>
                            <Label Text="{Binding Name}" FontSize="16"/>
                            <Label Text="{Binding DateStarted}" FontSize="14"/>
                            <Label Text="{Binding DateEnded}" FontSize="14"/>
                            <Label Text="{Binding Schedule}" FontSize="14"/>
                            <Label Text="{Binding Status}" TextColor="{Binding StatusColor}" FontAttributes="Italic" FontSize="14"/>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>